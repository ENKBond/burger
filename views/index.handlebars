<img src="./public/assets/img/funny-fruit-clipart-101714.png" alt = "burger image">
<h2>Eat Da Burger</h2>
<div class="container">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-3 notDevoured">
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devour=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-3 devoured">
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devour=false}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>

<form>
    <div class="form-group">
        <label for="addBurger">Add A New Burger</label>
        <textarea class="form-control" id="addBurger" rows="2"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
</form>

